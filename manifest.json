{
	"manifest_version": 2,

	"name": "Close Your Tabs",
	"description": "Manages and displays all tabs in browser and color-codes them depending on the duration of time since active use.",
	"version": "0.0.6",

	"browser_action": {
		"default_icon": "images/app-logo-favicon-32.png",
		"default_popup": "popup.html",
		"default_title": "Close Your Tabs"
	},
	"permissions": [
		"storage",
		"tabs",
		"<all_urls>",
		"https://www.closeyourtabs.com/dashboard*",
		"cookies",
		"webNavigation"
	],
	"background": {
		"scripts": ["js/server_requests.js", "js/tab_apis.js", "js/messaging_between_scripts.js","js/main.js"]
	},
	"content_scripts": [{
		"run_at": "document_end",
		"matches": ["https://www.closeyourtabs.com/dashboard*"],
		"js": ["js/dashboard.js"]
	}]
}